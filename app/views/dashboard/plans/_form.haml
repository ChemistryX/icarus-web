= form_for [:dashboard, @plan] do |f|
	.mb-6
		= f.label :plan_id, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.text_field :plan_id, class: "shadow-sm block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300", required: true
	.mb-6
		= f.label :kind, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.select :kind, Plan::KIND.map{|c| [Plan.human_attribute_name('kind/%s' % c), c]}, {}, {class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5"}
	.mb-6
		= f.label :duration, class: "block mb-2 text-sm font-medium text-gray-900"
		.flex
			= f.text_field :duration, class: "rounded-none rounded-l-lg bg-gray-50 border border-gray-300 text-gray-900"
			%span.inline-flex.items-center.px-3.text-sm.text-gray-900.bg-gray-200.rounded-r-md 주
	.mb-6
		= f.label :description
		= f.text_field :description
	.mb-6
		= f.label :goal, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.text_field :goal
	.mb-6
		= f.label :start, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.date_field :start
	.mb-6
		= f.label :end, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.date_field :end
	.mb-6
		= f.label :safety, class: "block mb-2 text-sm font-medium text-gray-900"
		= f.range_field :safety, in: 1..100
	.mb-6
		= f.label :participants, class: "block mb-2 text-sm font-medium text-gray-900"
		= fields_for :participants, @plan.participants do |p|
			%p= p.class
	.mb-6
		= f.submit "저장", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
