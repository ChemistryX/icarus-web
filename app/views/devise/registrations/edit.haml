%h2 계정 수정
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email, "이메일"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :password, "비밀번호"
    %i (변경을 원하지 않는다면 빈칸으로 남겨주세요.)
    %br/
    = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation, "비밀번호 확인"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :current_password, "현재 비밀번호"
    %br/
    = f.password_field :current_password, autocomplete: "current-password"
  .actions
    = f.submit "수정"
%h3 계정 삭제
= button_to "계정 삭제", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
